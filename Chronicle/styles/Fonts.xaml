<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:system="clr-namespace:System;assembly=netstandard">

    <!-- Font family -->
    <FontFamily x:Key="FontAwesomeSolid">pack://application:,,,/.resources/fonts/#Font Awesome 6 Free Solid</FontFamily>
    <FontFamily x:Key="FontAwesomeRegular">pack://application:,,,/.resources/fonts/#Font Awesome 6 Free Regular</FontFamily>
    <FontFamily x:Key="JostFont">pack://application:,,,/.resources/fonts/#Jost</FontFamily>
    
    <!-- Font sizes -->
    <system:Double x:Key="XSmall">14</system:Double> 
    <system:Double x:Key="Small">18</system:Double>
    <system:Double x:Key="Regular">22</system:Double>
    <system:Double x:Key="Large">26</system:Double>
    <system:Double x:Key="XLarge">28</system:Double> 
    
